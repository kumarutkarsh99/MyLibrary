
<%- include('partials/header.ejs'); -%>

<div class="container">

<div class="container" id="heading">
    <h1><%= listTitle%></h1>
</div>

<div class="container" id="welcome">
    <p>
        Welcome to YourLibrary Website! Whether you're drawn to the latest 
        bestsellers making waves, exploring the rich tapestry of classic literature, or uncovering 
        hidden literary treasures, this platform is your gateway to a world of diverse reading experiences.
        Here, you have the power to add new books to our growing collection and edit your reviews and 
        ratings to reflect your evolving thoughts and experiences with each book. Additionally, 
        this platform empowers you to remove books from your list, maintaining a curated selection 
        that resonates with your reading journey.
    </p>
</div>

<div class="container">
    <form action="/add">
        <button type="submit" class="button" id="button_click">Modify Your Library</button>
    </form>
</div>

<div class="container">
    <form action="/rating">
        <button type="submit" class="button" id="button_click">Sort by Rating</button>
    </form>
</div>

<div class="container">
    <form action="/date">
        <button type="submit" class="button" id="button_click">Sort by Date Modified</button>
    </form>
</div>

<div class="box">
    <%for(let book of listBooks){%>
        <div class="book">

            <div class="textbook">
                <p id="bookname<%=book.id%>">
                    <h2>Book: <%= book.book_name %></h2>
                </p>
                <p id="author<%=book.id%>">
                    <h3>Author: <%= book.author_name %></h3>
                </p>
                <p id="reviews<%=book.id%>">
                    Review: <%= book.reviews %>
                </p>
                <p id="rating<%=book.id%>">
                    Rating: <%= book.rating %>
                </p>
            </div>

            <form action="/delete" method="post">
                <input type="hidden" name="deleteBookId" value="<%= book.id %>">
                <button type="submit" id="button_delete" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
            </form>

        </div>
    <%}%>

</div>

<%- include('partials/footer.ejs'); -%>